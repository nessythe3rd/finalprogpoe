@{
    ViewData["Title"] = "Upload Document";
}

<h2>Upload Document</h2>

<form asp-controller="Lecturer" asp-action="UploadDocument" method="post" enctype="multipart/form-data">
    <!-- Lecturer Name Input -->
    <div>
        <label for="lecturerName">Lecturer Name:</label>
        <input type="text" id="lecturerName" name="LecturerName" placeholder="Enter Lecturer Name" required />
    </div>

    <!-- File Upload Input -->
    <div>
        <label for="document">Upload Document:</label>
        <input type="file" id="document" name="Document" accept=".pdf,.doc,.docx,.txt" required />
    </div>

    <!-- Submit Button -->
    <button type="submit">Submit</button>
</form>
